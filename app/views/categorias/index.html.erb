    <div class="row justify-content-between">
        
        <div class="col-4">
            <h1 class="titulo-seccion">Lista de Categorias</h1>
        </div>
        
        <div class="col-4 botones-links">
            <%= link_to nueva_categoria_path, class:"btn btn-primary" do %>
                <i class="bi bi-plus-circle"></i>
                Crear Nueva Categoría
            <% end %>
            <%= link_to productos_path, class:"btn btn-primary" do %>
                <i class="bi bi-card-list"></i>
                Lista Productos
            <% end %>
        </div>
    </div>
    <div class="row justify-content-between">
        <div class="col-4">
            <h3>Nombre</h3>
        </div>
        <div class="col-4">
            <h3>Acciones</h3>
        </div>
    </div>
    <% @lista_categorias.each do |categoria| %>
        <div class="row justify-content-between">
            <div class="col-4"><%= categoria.categoria %></div>
            <div class="col-4">
                <%= link_to editar_categorias_path(categoria), class:"btn btn-warning" do %>
                    <i class="bi bi-pencil-fill"></i>
                    Editar
                <% end %>
                <%= link_to categoria_path(categoria), method: :delete, data: { confirm: '¿Quieres eliminar la categoria?' }, class:"btn btn-danger" do %>                   
                    <i class="bi bi-trash-fill"></i>
                    Eliminar                    
                <% end %>
            </div>
        </div>
    <% end %>
</table>
