<div class="row my-4 justify-content-between">
        <% if flash[:errors] %>
            <div class="alert alert-warning" role="alert">
            <%= flash[:errors] %>
            </div>
        <% end %>
        <div class="col-4">
            <h1 class="titulo-seccion">Lista de Pedidos</h1>
        </div>
        
        <div class="col-4">
            <%= link_to admin_pedidos_helper_pedidos_formularios_path, method: :post, data: {confirm: '¿Seguro quieres crear un nuevo pedido?'}, class: "btn btn-primary boton-izquierda" do %>
                <i class="bi bi-plus-circle"></i>
                Crear Nuevo Pedido
            <% end %>
            <%= link_to admin_productos_path, class: "btn btn-primary boton-derecha" do %>
                <i class="bi bi-card-list"></i>
                Lista Productos
            <% end %>
        </div>
    </div>
    <div class="row my-2 justify-content-between">
        <div class="col-2 ms-2">
            <h3>Código</h3>
        </div>
        <div class="col-2 ms-2">
            <h3>Estado</h3>
        </div>
        <div class="col-2 ">
            <h3>Total</h3>
        </div>
        <div class="col-2">
            <h3>Fecha</h3>
        </div>
        <div class="col-1 me-5">
            <h3>Acciones</h3>
        </div>
    </div>
    <% @lista_pedidos.each do |pedido| %>
        <div class="row my-3 mx-0 p-0 justify-content-between border border-1 border-primary rounded-pill shadow rounded hover filas-lista-pedidos">
            <div class="col-2 ms-2 my-auto fw-bold fs-5"><%= pedido.codigo %></div>
            <div class="col-2 ms-5 my-auto fw-normal fs-5"><%= pedido.estados_pedido.estado %></div>
            <div class="col-2 ms-5 my-auto fw-normal fs-5"><%= pedido.total %></div>
            <div class="col-2 ms-5 my-auto fw-normal fs-5"><%= pedido.created_at.strftime("%d/%m/%Y") %></div>
            <div class="col-2  p-0 ms-1 my-1">
                <%= link_to admin_pedido_path(pedido), class: "btn btn-primary rounded-pill ms-5" do %>
                    <i class="bi bi-search"></i>
                    Ver Detalles
                <% end %>
                
            </div>
        </div>
    <% end %>